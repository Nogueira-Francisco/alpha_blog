<h1>Create a new article:</h1>

<%= @article.errors.any? %>
<%= @article.title %>


<%= form_with scope: :article, url: articles_path, local: false do |f| %>
    <p>
        <%= f.label :title %> </br>
        <%= f.text_field :title %>
    </p>

    <p>
        <%= f.label :description %> </br>
        <%= f.text_area :description %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>
    